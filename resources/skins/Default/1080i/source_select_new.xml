<window type="dialog">
    <coordinates>
        <left>0</left>
        <top>0</top>
		<width>1920</width>
		<height>1080</height>
    </coordinates>

    <controls>
        <!-- Background -->
        <control type="group">
            <top>0</top>
            <left>0</left>
            <width>1920</width>
            <height>1080</height>

            <!-- Fallback -->
            <control type="image">
                <texture>white.png</texture>
                <colordiffuse>C0000000</colordiffuse>
				<!--animation effect="fade" start="0" time="350" tween="linear" easing="in" condition="!String.IsEqual(Window().Property(instant_close),true)">Conditional</animation>
            	<animation effect="fade" end="0" time="350" tween="cubic" easing="in" condition="String.IsEqual(Window().Property(instant_close),true)">Conditional</animation>
				            <visible>String.IsEqual(Window().Property(instant_close),false)</visible-->

            </control>

            <!-- Fanart -->
            <control type="image">
                <texture background="true">$INFO[Window().Property(info.fanart)]</texture>
                <colordiffuse>FF404040</colordiffuse>
				<aspectratio>scale</aspectratio>
				<!--animation effect="fade" start="0" time="350" tween="linear" easing="in" condition="!String.IsEqual(Window().Property(instant_close),true)">Conditional</animation>
            	<animation effect="fade" end="0" time="350" tween="cubic" easing="in" condition="String.IsEqual(Window().Property(instant_close),true)">Conditional</animation>
				            <visible>String.IsEqual(Window().Property(instant_close),false)</visible-->

            </control>
        </control>

		<!-- Clearlogo -->
		<control type="image">
			<animation effect="fade" delay="350" start="0" time="350" tween="cubic" easing="in" condition="!String.IsEqual(Window().Property(instant_close),true)">Conditional</animation>
            <animation effect="fade" end="0" time="350" tween="cubic" easing="in" condition="String.IsEqual(Window().Property(instant_close),true)">Conditional</animation>
          
			<top>0</top>
			<left>70</left>
			<width>200</width>
			<height>150</height>
			<aspectratio>keep</aspectratio>
			<texture>jtk_clearlogo.png</texture>
			<colordiffuse>CCFFFFFF</colordiffuse>
		</control>

        
        <!-- Header Section (Sections) -->
        <control type="label" id="1001">
            <label>Section 1</label>
			<font>font20</font>
			<top>50</top>
			<left>560</left>
			<width>1620</width>
			<height>50</height>
			<!--animation effect="fade" start="0" time="350" tween="linear" easing="in" condition="!String.IsEqual(Window().Property(instant_close),true)">Conditional</animation>
			<animation effect="fade" end="0" time="350" tween="cubic" easing="in" condition="String.IsEqual(Window().Property(instant_close),true)">Conditional</animation-->
        </control>

		<!-- Section description -->
		<control type="label" id="1002">
            <label>Desc 1</label>
			<font>font20</font>
			<top>110</top>
			<left>560</left>
			<width>1620</width>
			<height>50</height>
			<!--animation effect="fade" start="0" time="350" tween="linear" easing="in"condition="!String.IsEqual(Window().Property(instant_close),true)">Conditional</animation>
			<animation effect="fade" end="0" time="350" tween="cubic" easing="in" condition="String.IsEqual(Window().Property(instant_close),true)">Conditional</animation-->
        </control>

		<!-- Scrollbar -->
		<control type="scrollbar" id="1111">
            <animation effect="fade" end="0" time="350" tween="cubic" easing="in" condition="String.IsEqual(Window().Property(instant_close),true)">Conditional</animation>
            <animation effect="fade" time="350" delay="700" tween="cubic" easing="in" condition="!String.IsEqual(Window().Property(instant_close),true)">Conditional</animation>
			<left>1890</left>
			<top>190</top>
			<width>20</width>
			<height>800</height>
			<showonepage>false</showonepage>
			<texturesliderbackground colordiffuse="99362e33">white.png</texturesliderbackground>
			<texturesliderbar colordiffuse="66FFFFFF">white.png</texturesliderbar>
			<texturesliderbarfocus colordiffuse="$INFO[Window().Property(settings.color)]">white.png</texturesliderbarfocus>
		</control>

		<control type="list" id="1000">
			<animation effect="slide" start="1400,0" time="350" tween="cubic" easing="in" condition="!String.IsEqual(Window().Property(instant_close),true)">Conditional</animation>
			<animation effect="slide" end="1400,0" time="350" tween="cubic" easing="in" condition="String.IsEqual(Window().Property(instant_close),true)">Conditional</animation>
			<viewtype label="Sources">list</viewtype>
			<pagecontrol>1111</pagecontrol>
			<left>560</left>
			<top>180</top>
			<width>1340</width>
			<height>800</height>
			<itemgap>20</itemgap>
			<orientation>vertical</orientation>

			<!-- Focused Source -->
			<focusedlayout height="160">
				<control type="group">
					<width>1250</width>
					
					<control type="image">
						<top>10</top>
						<width>200</width>
						<texture border="30">left-circle.png</texture>
						<colordiffuse>FF00559D</colordiffuse>
					</control>

					<control type="image">
						<top>10</top>
						<texture border="30">circle.png</texture>
						<colordiffuse>992A3E5C</colordiffuse>
					</control>
				</control>

				<control type="label">
						<font>font12</font>
						<top>30</top>
						<height>20</height>
						<align>center</align>
						<width>200</width>
						<label>$INFO[ListItem.Property(a1)]</label>
					</control>

					<control type="label">
						<font>font12</font>
						<top>70</top>
						<height>20</height>
						<align>center</align>
						<width>200</width>
						<label>$INFO[ListItem.Property(a2)]</label>
					</control>
				

					<!-- Type -->
					<control type="label">
						<top>110</top>
						<height>20</height>
						<align>center</align>
						<width>200</width>
						<font>font12</font>
						<align>left</align>
						<label>$INFO[ListItem.Property(a3)]</label>
					</control>

					<!-- Release Title -->
					<control type="label">
						<top>30</top>
						<left>220</left>
						<width>1000</width>
						<height>20</height>
						<font>font12</font>
						<align>left</align>
						<label>$INFO[ListItem.Property(b1)]</label>
					</control>

					<control type="label">
						<top>70</top>
						<left>220</left>
						<width>1000</width>
						<height>20</height>
						<font>font12</font>
						<align>left</align>
						<label>$INFO[ListItem.Property(b2)]</label>
					</control>
					
					<control type="label">
						<top>110</top>
						<left>220</left>
						<width>1000</width>
						<height>20</height>
						<font>font12</font>
						<align>left</align>
						<label>$INFO[ListItem.Property(b3)]</label>
					</control>
			</focusedlayout>

			<!-- Unfocused Source -->
			<itemlayout height="160">
				<control type="group">
					<width>1250</width>

					<control type="image">
						<top>10</top>
						<width>200</width>
						<texture border="30">left-circle.png</texture>
						<colordiffuse>FF00559D</colordiffuse>
					</control>

					<!-- Card with Rounded Corners -->
					<control type="image">
						<top>10</top>
						<texture border="30">circle.png</texture>
						<colordiffuse>FF362e33</colordiffuse>
					</control>

					<control type="label">
						<font>font12</font>
						<top>30</top>
						<height>20</height>
						<align>center</align>
						<width>200</width>
						<label>$INFO[ListItem.Property(a1)]</label>
					</control>

					<control type="label">
						<font>font12</font>
						<top>70</top>
						<height>20</height>
						<align>center</align>
						<width>200</width>
						<label>$INFO[ListItem.Property(a2)]</label>
					</control>
				

					<!-- Type -->
					<control type="label">
						<top>110</top>
						<height>20</height>
						<align>center</align>
						<width>200</width>
						<font>font12</font>
						<align>left</align>
						<label>$INFO[ListItem.Property(a3)]</label>
					</control>

					<!-- Release Title -->
					<control type="label">
						<top>30</top>
						<left>220</left>
						<width>1000</width>
						<height>20</height>
						<font>font12</font>
						<align>left</align>
						<textcolor>66FFFFFF</textcolor>
						<label>$INFO[ListItem.Property(b1)]</label>
					</control>

					<control type="label">
						<top>70</top>
						<left>220</left>
						<width>1000</width>
						<height>20</height>
						<font>font12</font>
						<align>left</align>
						<label>$INFO[ListItem.Property(b2)]</label>
					</control>
					
					<control type="label">
						<top>110</top>
						<left>220</left>
						<width>1000</width>
						<height>20</height>
						<font>font12</font>
						<align>left</align>
						<label>$INFO[ListItem.Property(b3)]</label>
					</control>
				</control>
			</itemlayout>
		</control>

        <!-- Side Info -->
        <control type="group">
            <animation effect="slide" end="-600,0" time="350" tween="cubic" easing="in" condition="String.IsEqual(Window().Property(resolving),true)">Conditional</animation>
            <animation effect="slide" start="-600,0" delay="350" time="350" tween="cubic" easing="in" condition="!String.IsEqual(Window().Property(resolving),true)">Conditional</animation>
			<animation effect="slide" end="-600,0" time="350" tween="cubic" easing="in" condition="String.IsEqual(Window().Property(settings_open),true)">Conditional</animation>
            <animation effect="slide" start="-600,0" time="350" tween="cubic" easing="in" condition="!String.IsEqual(Window().Property(settings_open),true)">Conditional</animation>

            <top>100</top>
            <left>20</left>
            <width>500</width>


			<!-- Poster -->
			<control type="image">
				<aspectratio align="center" aligny="center">keep</aspectratio>
				<top>20</top>
				<left>20</left>
				<height>600</height>
				<width>500</width>
				<align>center</align>
				<aligny>top</aligny>
				<texture>$INFO[Window.Property(info.poster)]</texture>
				<visible>!String.IsEmpty(Window.Property(info.poster))</visible>
				<aspectratio>keep</aspectratio>
			</control>
			
			<!-- Plot -->
			<control type="label">
				<wrapmultiline>true</wrapmultiline>
				<top>650</top>
				<left>60</left>
				<height>200</height>
				<width>460</width>
				<font>font12</font>
				<textcolor>FFFFFFFF</textcolor>
				<align>left</align>
				<aligny>top</aligny>
				<label>$INFO[Window().Property(info.plot)]</label>
				<visible>!String.IsEmpty(Window.Property(info.plot))</visible>
			</control>
        </control>

		<!-- Side Info -->
		<control type="group" id="2000">
			<animation effect="slide" start="-600,0" time="350" tween="cubic" easing="in" condition="String.IsEqual(Window().Property(settings_open),true)">Conditional</animation>
			<animation effect="slide" end="-600,0" time="350" tween="cubic" easing="in" condition="!String.IsEqual(Window().Property(settings_open),true)">Conditional</animation>
			<top>140</top>
			<left>60</left>
			<width>450</width>
			<height>980</height>

			
			<control type="grouplist">
				<itemgap>20</itemgap>
				<control type="label">
					<top>0</top>
					<left>20</left>
					<height>40</height>
					<align>left</align>
					<label>Settings</label>
					<onfocus>SetProperty(dedupe,True,1000)</onfocus>
					<onunfocus>SetProperty(dedupe,False,1000)</onunfocus>
					<ondown>2002</ondown>
					<texturenofocus></texturenofocus>
					<texturefocus></texturefocus>
					<alttexturefocus>white.png</alttexturefocus>
					<alttexturenofocus>white.png</alttexturenofocus>
				</control>
				<!-- Deduplication Toggle -->
				<!-- Source Filtering -->
				<control type="button" id="2002">
					<align>left</align>
					<label>Sorting by seeders</label>
				</control>

				<control type="button" id="2003">
					<align>left</align>
					<label>Priority Language: es</label>
				</control>
				<control type="button" id="2004">
					<align>left</align>
					<label>Quality sections enabled</label>
				</control>
				<control type="button" id="2005">
					<align>left</align>
					<label>Showing un-cached</label>
				</control>

				<!-- Language Filter -->
				<control type="edit" id="2006">
					<align>left</align>
					<aligny>center</aligny>
					<label>Preferred Languages (comma-separated)</label>
					        <hinttext>Enter search string</hinttext>

					<ontextchange>SetProperty(languageFilter,$INFO[Control.GetLabel(3)],1000)</ontextchange>
				</control>
			</control>
		</control>
    </controls>
</window>
